@model FormSubmitApp.Models.FinanceRegistration

<h2>Finance Management Registration</h2>
<form asp-action="Register" method="post">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" />
        <span asp-validation-for="DateOfBirth"></span>
    </div>
    <div>
        <label asp-for="Income"></label>
        <input asp-for="Income" type="number" step="0.01" />
        <span asp-validation-for="Income"></span>
    </div>
    <div>
        <label asp-for="Budget"></label>
        <input asp-for="Budget" type="number" step="0.01" />
        <span asp-validation-for="Budget"></span>
    </div>
    <div>
        <label asp-for="EmploymentStatus">Employment Status</label>
        <select asp-for="EmploymentStatus" asp-items="ViewBag.EmploymentStatusOptions"></select>
        <span asp-validation-for="EmploymentStatus"></span>
    </div>
    <div>
        <label asp-for="Currency">Currency</label>
        <select asp-for="Currency" asp-items="ViewBag.CurrencyOptions"></select>
        <span asp-validation-for="Currency"></span>
    </div>
    <button type="submit">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
